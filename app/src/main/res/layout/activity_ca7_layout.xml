<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ca7_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff"
    tools:context="local.fgc.fgclocal.ca7">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:src="@drawable/fgcalarminversbann"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#e67a2b"
            android:text="Seleccioni a la parada que es dirigeix :"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:fadeScrollbars="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="17"
                android:orientation="vertical">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Lleida-Pirineus"
                    android:textSize="15dp"
                    android:background="@android:color/transparent"
                    android:textColor="#e67a2b"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Alcoletge"
                    android:textSize="15dp"
                    android:background="@android:color/transparent"
                    android:textColor="#e67a2b"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Vilanova de la Barca"
                    android:textSize="15dp"
                    android:background="@android:color/transparent"
                    android:textColor="#e67a2b"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Térmens"
                    android:textSize="15dp"
                    android:background="@android:color/transparent"
                    android:textColor="#e67a2b"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Vallfogona de Balaguer"
                    android:textSize="15dp"
                    android:background="@android:color/transparent"
                    android:textColor="#e67a2b"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Balaguer"
                    android:textSize="15dp"
                    android:background="@android:color/transparent"
                    android:textColor="#e67a2b"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Gerb"
                    android:textSize="15dp"
                    android:background="@android:color/transparent"
                    android:textColor="#e67a2b"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Sant Llorenç de Montgai"
                    android:textSize="15dp"
                    android:background="@android:color/transparent"
                    android:textColor="#e67a2b"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Vilanova de la Sal"
                    android:textSize="15dp"
                    android:background="@android:color/transparent"
                    android:textColor="#e67a2b"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Santa Linya"
                    android:textSize="15dp"
                    android:background="@android:color/transparent"
                    android:textColor="#e67a2b"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Àger"
                    android:textSize="15dp"
                    android:background="@android:color/transparent"
                    android:textColor="#e67a2b"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Cellers-Llimiana"
                    android:textSize="15dp"
                    android:background="@android:color/transparent"
                    android:textColor="#e67a2b"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Guàrdia de Tremp"
                    android:textSize="15dp"
                    android:background="@android:color/transparent"
                    android:textColor="#e67a2b"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Palau de Noguera"
                    android:textSize="15dp"
                    android:background="@android:color/transparent"
                    android:textColor="#e67a2b"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Tremp"
                    android:textSize="15dp"
                    android:background="@android:color/transparent"
                    android:textColor="#e67a2b"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Salàs de Pallars"
                    android:textSize="15dp"
                    android:background="@android:color/transparent"
                    android:textColor="#e67a2b"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="La Pobla de Segur"
                    android:textSize="15dp"
                    android:background="@android:color/transparent"
                    android:textColor="#e67a2b"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
